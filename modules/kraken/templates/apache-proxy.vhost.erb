Listen <%= port %>
<VirtualHost *:<%= port %>>
  ErrorLog /var/log/apache2/error.log
  # Possible values include: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn

  #Diederik: I think we should leave this off as the access.log will grow very fast
  #and we should not keep track of our colleagues browsing behavior.
  #CustomLog /var/log/apache2/access.log combined
  ServerSignature On

  ProxyRequests Off
  <Proxy *>
    Order allow,deny
    Allow from all
    Allow from <%= whitelist.values.join(' ') %>
  </Proxy>

  UseCanonicalName Off
  UseCanonicalPhysicalPort Off


  RewriteEngine On
  RewriteLog /var/log/apache2/rewrite.log
  RewriteLogLevel 9

  # Special rule to allow direct read only HTTP access to
  # file in HDFS in the /wmf/public directory.
  # E.g.  http://analytics1001.wikimedia.org:8085/wmf/public/<path/to/file>
  RewriteCond  %{HTTP_HOST} analytics1001.wikimedia.org
  RewriteRule "^(/wmf/public/.*)$" "http://analytics1011.eqiad.wmnet:50075/streamFile$1?nnaddr=analytics1010.eqiad.wmnet:8020" [P,L]

  # proxy every other request to its real destination.
  RewriteRule "^(.*)" "http://%{HTTP_HOST}$1" [P]

  # allow requests to /wmf/public without HTTP auth
  <Location /wmf/public>
    Allow from all
  </Location>

  <Location />
    Order deny,allow
    AuthType Basic
    AuthName "wmf-analytics"
    AuthUserFile /srv/.htpasswd
    require valid-user
    Deny from all
    Allow from <%= whitelist.values.join(' ') %>
    Satisfy any
  </Location>
</VirtualHost>